<div class="container">
    <div class="row">
        <!-- article -->
        {{#each article}}
        <div class="col-md-4 " style="margin: 20px auto;">
            <div class="card mb-4 shadow-sm">
                <img src="{{this.cover.urlSharp}}" alt="" class="bd-placeholder-img card-img-top" preserveAspectRatio="xMidYMid slice" >

                <div class="card-body">
                    <h3 class="card-text">{{this.title}}</h3>
                    <p class="card-text">{{this.content}}</p>

                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-secondary btn-sm">
                                <a href="/update/{{this.id}}" style="text-decoration: none; color:inherit">Modifier</a>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>